	} else {
		common_end_talk
	}
}


//******************************************************************************
//最小化からの復帰 OnWindowStateRestore
//******************************************************************************

OnWindowStateRestore
{
	if solo_flg == "1"
	{
		<<"
		す３１４：ちょっと、近すぎ、ですよ。
		">>
	} else {
		<<"
		す０：敵偵察機、遠ざかっていきます。
		く：こんな辺鄙なところまでご苦労なこって。
		">>
	}
}
