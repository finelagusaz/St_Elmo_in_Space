//******************************************************************************
//メールチェック
//******************************************************************************

//------------------------------------------------------------------------------
//メールチェック開始
//------------------------------------------------------------------------------
OnBIFFBegin
{
	<<"
	す０：メッセージが届いていないか確認中です。
	">>
}

//------------------------------------------------------------------------------
//メールチェック成功
//------------------------------------------------------------------------------
OnBIFFComplete
{
	if reference[0] == 0
	{
		//---- メールは無かった
		<<"
		す０：メッセージはありません。
		">>
	}
	else
	{
		//---- メールが届いていた
		<<"
		す０：%(reference[0])通のメッセージが届いています。
		">>
	}
}

//------------------------------------------------------------------------------
//メールチェック失敗
//------------------------------------------------------------------------------
OnBIFFFailure
{
	if reference[0] == "timeout"
	{
		//---- タイムアウト
		<<"
		す０：タイムアウトが発生しました。
		時間を空けてから再取得を試みたほうがよいかと。
		く：エンジニアチームよこすほどでもないね。
		">>
	}
	elseif reference[0] == "kick"
	{
		//---- 蹴られた
		<<"
		す０：サーバーにキックされました。
		機械知能体同士の縄張り争いもありますね。
		">>
	}
	elseif reference[0] == "defect"
	{
		//---- 設定誤り
		<<"
		す０：設定に問題があります。
		再設定をお願いします。
		">>
	}
	else
	{
		//---- 原因不明
		<<"
		す０：原因不明の問題が発生しました。
		">>
	}
}


